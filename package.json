{
  "name": "htmljs",
  "version": "1.0.0",
  "description": "HTML with iframe and TypeScript logic",
  "main": "main.js",
  "scripts": {
    "build": "esbuild main.ts --bundle --outfile=bundle.js --format=iife --global-name=AppBundle",
    "watch": "esbuild main.ts --bundle --outfile=bundle.js --format=iife --global-name=AppBundle --watch",
    "build:ts": "tsc",
    "serve": "node serve.js",
    "dev": "npm run build && npm run serve"
  },
  "keywords": [
    "html",
    "iframe",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "esbuild": "^0.25.11",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@permitio/permit-js": "^0.5.2",
    "dotenv": "^17.2.3"
  }
}
